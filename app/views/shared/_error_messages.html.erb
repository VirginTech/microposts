<% if object.errors.any? %>
  <div id="error_explanation">
    <div class="alert alert-danger">
      入力されたフォームに <%= "#{object.errors.count} #{'個のエラーがあります'}" %>.
    </div>
    <ul>
    <% object.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>