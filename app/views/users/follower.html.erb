<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      
      <table border=0>
        <tr>
          <td>
            <h1>
              <%#= gravatar_for @user %>
              <% if @user.avatar.present? %>
                <%= image_tag @user.avatar.url, :size => '80x80',class: "gravatar"%>
              <% else %>
                <%= image_tag('no_image.png',{:size => '80x80',class: "gravatar"}) %>
              <% end %>
              <%= @user.name %>
            </h1>
          </td>
        </tr>
        
        <tr>
          <td>
            <b><%= User:: AREA_LABEL %></b>
            <%= @user.area %>
            <br />
            <b><%= User::PHONE_LABEL %></b>
            <%= @user.phone %>
            <br />
            <b><%= User::PROFILE_LABEL %></b>
            <br />
            <%= simple_format(@user.profile) %>
          </td>
        </tr>
      </table>
      
      <%= link_to "フォロー", following_user_path(@user) %>
      (<%= @user.following_users.count %>)
      <%= link_to "フォロワー", follower_user_path(@user) %>
      (<%= @user.follower_users.count %>)
      <%= link_to "お気に入り", bookmarking_user_path(@user) %>
      (<%= @user.bookmarking_posts.count %>)
      
    </section>
  </aside>


  <div class="col-md-8">
    <h3><%=@user.name %>さんをフォローしている人</h3>
    <!-- ページネーション表示 -->
    <%= page_entries_info @followers ,entry_name: "ユーザー" %>
    <table>
      <% @followers.each do |followers| %>
        <tr>
          <td width=300>
            <ol class="microposts">
              <li>
                <%#= link_to gravatar_for(followers, size: 50), followers %>
                <% if followers.avatar.present? %>
                  <%= image_tag followers.avatar.url, :size => '80x80',class: "gravatar"%>
                <% else %>
                  <%= image_tag('no_image.png',{:size => '80x80',class: "gravatar"}) %>
                <% end %>
                <%= followers.name %><br />
                <%= link_to t("view_profile"), followers %>
              </li>
            </ol>
          </td>
        </tr>
      <% end %>
    </table>
    <%= paginate @followers %>
  </div>
</div>
