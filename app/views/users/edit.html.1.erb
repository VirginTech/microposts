<h1>基本情報の編集</h1>

<hr />

<div class="row">
  <div class="col-md-6 col-md-offset-3">

      <%= form_for(@user) do |f| %>
      
          <%= render 'shared/error_messages', object: f.object %> <!-- ここを追加 -->
          
          <% if @user.avatar.present? %>
            <%= image_tag @user.avatar.url,:size => '80x80'  %>
          <% else %>
            <%= image_tag 'no_image.png',:size => '80x80' %>
          <% end %>
          <br />
          <%= f.label t('avatar_label') %>
          <%= f.file_field :avatar %>
  
          <%= f.label t('name_label') %>
          <%= f.text_field :name, :size=>"30" , class: 'form-control'%>

          <%= f.label t('id_label') %>
          <%= f.text_field :email, :size=>"40", class: 'form-control'%>

          <%= f.label "#{t('password_label')} #{'(変更する場合のみ)'}" %>
          <%= f.password_field :password, :size=>"40", class: 'form-control'%>

          <%= f.label t('area_label') %>
          <%= f.text_field :area, :size=>"10", class: 'form-control'%>

          <%= f.label t('phone_label') %>
          <%= f.text_field :phone, :size=>"40", class: 'form-control'%>
        
          <%= f.label t('profile_label') %>
          <%= f.text_area :profile, :size=>"50x5", class: 'form-control'%>
        
          <%= f.submit t('confirm_label'), class:"btn btn-sm btn-primary" %>
      
      <% end %>
    
  </div>
</div>

<hr />

