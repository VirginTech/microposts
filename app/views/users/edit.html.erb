<h1>基本情報の編集</h1>

<hr />

<div class="row">
  <div class="col-md-6 col-md-offset-3">

      <%= form_for(@user) do |f| %>
      
          <%= render 'shared/error_messages', object: f.object %> <!-- ここを追加 -->
          
          <%= image_tag @user.avatar.url if @user.avatar %>
          <%= f.label User::AVATAR_LABEL %>
          <%= f.file_field :avatar %>
  
          <%= f.label User::NAME_LABEL %>
          <%= f.text_field :name, :size=>"30" , class: 'form-control'%>

          <%= f.label User::ID_LABEL %>
          <%= f.text_field :email, :size=>"40", class: 'form-control'%>

          <%= f.label User::PASSWORD_LABEL %>
          <%= f.password_field :password, :size=>"40", class: 'form-control'%>

          <%= f.label User::AREA_LABEL %>
          <%= f.text_field :area, :size=>"10", class: 'form-control'%>

          <%= f.label User::PHONE_LABEL %>
          <%= f.text_field :phone, :size=>"40", class: 'form-control'%>
        
          <%= f.label User::PROFILE_LABEL %>
          <%= f.text_area :profile, :size=>"50x5", class: 'form-control'%>
        
          <%= f.submit "　確　定　", class:"btn btn-sm btn-primary" %>
      
      <% end %>
    
  </div>
</div>

<hr />

