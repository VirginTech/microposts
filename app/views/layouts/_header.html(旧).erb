<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
    <%= link_to t('title'), root_path, id: "logo" %>
    <nav>
      <ul class="nav navbar-nav navbar-right">
        <li><%= link_to t('header_home'), root_path %></li>
        <li><%= link_to t('header_help'), '#' %></li>
        <% if logged_in? %>
          <li><%= link_to t('header_users'), users_path %></li>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown"><%=t('header_account')%> <b class="caret"></b></a>
            <ul class="dropdown-menu">
              <li><%= link_to t('header_profile'), current_user %></li>
              <li><%= link_to t('header_setting'), '#' %></li>
              <li><%= link_to t('header_editing'), edit_user_path(current_user) %></li>
              <li class="divider"></li>
              <li>
                <%= link_to t('header_logout'), logout_path, method: "delete" %>
              </li>
            </ul>
          </li>
        <% else %>
          <li><%= link_to t('header_login'), login_path %></li>
        <% end %>
      </ul>
    </nav>
  </div>
</header>